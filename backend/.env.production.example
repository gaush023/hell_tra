# ================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ================================
# IMPORTANT: This is a template for production deployment.
# Copy this file to .env and configure with your production values.
#
# Security Checklist:
# ✓ Generate a strong JWT_SECRET (see command below)
# ✓ Set FRONTEND_URL to your specific domain (not *)
# ✓ Use production-grade SSL certificates (Let's Encrypt recommended)
# ✓ Never commit .env file to version control
# ================================

# ================================
# Security & Authentication (REQUIRED)
# ================================

# JWT Secret Key - MUST BE CHANGED
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_HERE

# Bcrypt Salt Rounds (12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# ================================
# Server Configuration
# ================================

# Server Port (use 443 for HTTPS in production)
PORT=3001

# HTTPS Configuration (always true in production)
HTTPS_ENABLED=true

# SSL Certificate Paths (use Let's Encrypt certificates)
# Example paths for Let's Encrypt:
# SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem
# SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/path/to/your/privkey.pem
SSL_CERT_PATH=/path/to/your/fullchain.pem

# ================================
# CORS Configuration (REQUIRED)
# ================================

# Frontend URL - MUST BE SET TO YOUR DOMAIN
# DO NOT USE * IN PRODUCTION
FRONTEND_URL=https://yourdomain.com

# ================================
# Database Configuration
# ================================

# SQLite Database File Path
DB_PATH=/var/lib/transcendence/database.db

# ================================
# File Upload Configuration
# ================================

# Maximum file upload size (5MB)
MAX_FILE_SIZE=5242880

# Upload directory for user avatars
UPLOAD_DIR=/var/lib/transcendence/uploads/avatars
